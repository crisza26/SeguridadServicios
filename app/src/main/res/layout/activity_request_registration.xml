<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/listview_select_background"
    android:alpha="0.9"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_marginTop="100dp"
        android:scrollbars="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <EditText
            android:id="@+id/first_name"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="Nombre"
            android:inputType="text"
            android:maxLines="1"
            android:fontFamily="opensans"
            android:layout_marginLeft="70sp"
            android:layout_marginRight="70sp"
            android:gravity="center"
            android:singleLine="true"

            android:background="@drawable/text_field_1x" />

        <EditText
            android:id="@+id/last_name"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="Apellido"
            android:inputType="text"
            android:maxLines="1"
            android:fontFamily="opensans"
            android:layout_marginLeft="70sp"
            android:layout_marginRight="70sp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:singleLine="true"
            android:background="@drawable/text_field_1x" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="Celular"
            android:inputType="text"
            android:fontFamily="opensans"
            android:maxLines="1"
            android:layout_marginLeft="70sp"
            android:layout_marginRight="70sp"
            android:layout_marginTop="30sp"
            android:gravity="center"
            android:singleLine="true"
            android:background="@drawable/text_field_1x" />

        <EditText
            android:id="@+id/new_password"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:layout_marginLeft="70sp"
            android:layout_marginRight="70sp"
            android:layout_marginTop="30sp"
            android:gravity="center"
            android:singleLine="true"
            android:background="@drawable/text_field_1x" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/id_req_send"
            android:background="@layout/buttonshape"
            android:shadowRadius="5"
            android:layout_width="90dp"
            android:text="Enviar"
            android:layout_height="36dp"
            android:onClick="send"
            android:textColor="@color/witheLetter"
            android:gravity="center" />

        <Button
            android:id="@+id/id_req_cancel"
            android:background="@layout/buttonshape"
            android:shadowRadius="5"
            android:layout_width="90dp"
            android:text="Cancelar"
            android:layout_height="36dp"
            android:onClick="cancel"
            android:layout_marginLeft="25dp"
            android:textColor="@color/witheLetter"
            android:gravity="center" />
        </LinearLayout>

</LinearLayout>
